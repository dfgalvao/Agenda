
  <p id="notice"><%= notice %></p>

  <h1>Remembers</h1>
  <%= form_tag(remembers_path, method: :get) do %>
    <%= text_field_tag 'search', nil, placeholder:'busque aqui...'%>
    <%= submit_tag "search" %>
  <% end %>
  <hr>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @remembers.each do |remember| %>
        <tr>
          <td><%= remember.name %></td>
          <td><%= remember.email %></td>
          <td><%= remember.phone %></td>
          <td><%= link_to 'Show', remember %></td>
          <td><%= link_to 'Edit', edit_remember_path(remember) %></td>
          <td><%= link_to 'Destroy', remember, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Remember', new_remember_path %>
